<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/scorecard_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="#355e3b"
        app:layout_constraintBottom_toBottomOf="@+id/player_names"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_names" />

    <HorizontalScrollView
        android:id="@+id/player_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_names"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="44dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <View
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:background="#355e3b"
            app:layout_constraintTop_toBottomOf="@+id/player_scroll_view"
            app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default player"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:background="#355e3b"
                app:layout_constraintTop_toBottomOf="@+id/player_scroll_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp" />
            <ImageButton
                android:id="@+id/add_player"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                android:contentDescription="Add a new player"
                android:src="@drawable/baseline_add_24" />


        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:background="#355e3b"
        app:layout_constraintTop_toBottomOf="@+id/player_scroll_view"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>